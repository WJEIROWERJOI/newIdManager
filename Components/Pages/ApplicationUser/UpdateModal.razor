@using System.Web
@rendermode InteractiveServer
@inject ApplicationUserService applicationUserService
@inject NavigationManager nav

<link href="app.css" rel="stylesheet" />

@if (ShowModal)
{
	if(WhatVisible){
		<div class="modal-background" @onclick="CloseModal">
			<div class="modal-content" @onclick:stopPropagation>
				<button class="close-button" @onclick="CloseModal">×</button>

				<!-- 모달 제목 -->
				<h5 class="modal-title" style="margin-bottom:16px;">수정</h5>

				<EditForm Model="@updateUser" OnValidSubmit="UpdateUser">
					<table style="width:100%; border:1px solid #ddd;">
						<tbody>
							<tr>
								<td style="padding:8px; border:1px solid #ddd;">UserName</td>
								<td style="padding:8px; border:1px solid #ddd;"><InputText @bind-Value="updateUser.UserName" class="form-control" /></td>
							</tr>
							@* <tr> *@
							@* 	<td style="padding:8px; border:1px solid #ddd;">Password</td> *@
							@* 	<td style="padding:8px; border:1px solid #ddd;"><InputText @bind-Value="updateUser.NewPassword" class="form-control" /></td> *@
							@* </tr> *@
							<tr>
								<td style="padding:8px; border:1px solid #ddd;">Email</td>
								@* <td style="padding:8px; border:1px solid #ddd;"><InputText @bind-Value="updateUser.Email" type="email" class="form-control" /></td> *@

								<td style="padding:8px; border:1px solid #ddd;"><InputText @bind-Value="updateUser.Email" type="Email" class="form-control" /></td>
							</tr>
							<tr>
								<td style="padding:8px; border:1px solid #ddd; border-bottom:1px solid #ddd;">Role</td>
								<td style="padding:8px; border:1px solid #ddd; border-bottom:1px solid #ddd;">
									<select @bind="updateUser.Role" class="form-select">
										<option value="Admin">Admin</option>
										<option value="User">User</option>
									</select>
								</td>
							</tr>
						</tbody>
					</table>

					<div class="modal-actions" style="text-align:right; margin-top:16px;">
						<button type="submit" class="btn btn-primary" style="margin-right:8px;">저장</button>
						<button type="button" class="btn btn-secondary" @onclick="CloseModal">취소</button>
					</div>
				</EditForm>

			</div>
		</div>
	}
	else
	{
		<div class="modal-background" @onclick="CloseModal">
			<div class="modal-content" @onclick:stopPropagation>
				<button class="close-button" @onclick="CloseModal">×</button>

				<h5 class="modal-title" style="margin-bottom:16px;">수정</h5>

				<EditForm Model="@updateUser" OnValidSubmit="UpdatePWDUser">
					<table style="width:100%; border:1px solid #ddd;">
						<tbody>
							<tr>
								<td style="padding:8px; border:1px solid #ddd;">UserName</td>
								<td style="padding:8px; border:1px solid #ddd;"><InputText @bind-Value="updateUser.UserName" class="form-control" disabled /></td>
							</tr>
							<tr>
								<td style="padding:8px; border:1px solid #ddd;">Password</td>
								<td style="padding:8px; border:1px solid #ddd;"><InputText @bind-Value="updateUser.NewPassword" type="password" class="form-control" /></td>
							</tr>
							<tr>
								<td style="padding:8px; border:1px solid #ddd;">Email</td>
								@* <td style="padding:8px; border:1px solid #ddd;"><InputText @bind-Value="updateUser.Email" type="email" class="form-control" /></td> *@

								<td style="padding:8px; border:1px solid #ddd;"><InputText @bind-Value="updateUser.Email" class="form-control" disabled /></td>
							</tr>
							<tr>
								<td style="padding:8px; border:1px solid #ddd; border-bottom:1px solid #ddd;">Role</td>
								<td style="padding:8px; border:1px solid #ddd; border-bottom:1px solid #ddd;">
									<select @bind="updateUser.Role" class="form-select" disabled>
										<option value="Admin">Admin</option>
										<option value="User">User</option>
									</select>
								</td>
							</tr>
						</tbody>
					</table>

					<div class="modal-actions" style="text-align:right; margin-top:16px;">
						<button type="submit" class="btn btn-primary" style="margin-right:8px;">저장</button>
						<button type="button" class="btn btn-secondary" @onclick="CloseModal">취소</button>
					</div>
				</EditForm>

			</div>
		</div>
	}
}

