@using newIdManager.Components.Pages
@inherits LayoutComponentBase
@inject NavigationManager nav

<div class="page">
	<div class="sidebar">
		<NavMenu />
	</div>

	<main>
		<AuthorizeView>
			<NotAuthorized>
				<div class="top-row px-4">
					<NavLink href="/login" class="btn btn-primary" target="_self" ReturnUrl="@nav.Uri">Login</NavLink>
				</div>
			</NotAuthorized>
			<Authorized>
				<div class="top-row px-4">
					Hello @context.User.Identity?.Name
					@* <NavLink href="@($"/logout?returnUrl={ngm.ToBaseRelativePath(ngm.Uri)}")">Logout</NavLink> *@
					<form action="Account/Logout" method="post">
						<AntiforgeryToken />
						<input type="hidden" name="ReturnUrl" value="@nav.ToBaseRelativePath(nav.Uri)" />
						<button type="submit" class="btn btn-primary">Logout</button>
					</form>
				</div>

			</Authorized>
		</AuthorizeView>

		<article class="content px-4">
			@Body
		</article>
	</main>
</div>

<div id="blazor-error-ui">
	An unhandled error has occurred.
	<a href="" class="reload">Reload</a>
	<a class="dismiss">🗙</a>
</div>
